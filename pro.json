{
    "apps": [
        {
            "name": "Melt_WebAPI",
            "script": "./bin/www",
            "instances": "max",
            "exec_mode": "cluster",
            "watch": [
                "core"
            ],
            "watch_options": {
                "usePolling": true
            },
            "merge_logs": true,
            "out_file"   : "./logs/out.log",
            "error_file" : "./logs/err.log",
            "log_date_format": "YYYY-MM-DD HH:mm:ss"
        }
    ]
}